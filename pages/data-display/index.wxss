@import "/utils/smalltitle.wxss";
.layout-style{
  margin-top: 25rpx;
  background-color: whitesmoke;
}

.text-style1{
  display: flex;
  justify-content: space-around;
  margin-top: 25rpx;
  font-size: 29rpx;
  color: gray;
}

.per-content{
  display: flex;
  flex-direction: column;
}

.content-style{
  margin-top: 15rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 26rpx;
  color: gray;
  background-color: white
}

.per-content{
  width: 150rpx;
  display: flex;
  align-items: center;
  word-break: break-alls
}

.info-per{
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 85rpx;
  border-bottom: 1rpx  whitesmoke solid;
  display: flex;
  align-items: center;
  justify-content:space-between;
  background-color: white;
  font-size: 29rpx;
}

.text-style2{
  margin-left: 30rpx;
  width: 250rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1; 
}


.input-style{
  color: gray;
  width: 390rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1; 
}

page{
  background-color: whitesmoke
}

