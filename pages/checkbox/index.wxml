<checkbox-group bindchange="checkboxChange">
  <view class='currency-style'>
    <bolck wx:for="{{items}}" wx:key='waihui'>
      <view class='per-currency'>
        <checkbox value="{{item.value}}" checked="{{item.checked}}" />
        {{item.name}}
      </view>
    </bolck>
  </view>
</checkbox-group>

