    <checkbox value='{{TermValue}}'></checkbox>
  </checkbox-group>
  <view>
    <text>我已经阅读同意</text>
    <text class='terms-click' bindtap='onCollectionAgreement'>《被点击的条款》</text>
  </view>
</view>

